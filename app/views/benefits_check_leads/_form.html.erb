  <script type="text/javascript">
    // Fill out the current URL so we know which page submitted this form
    var nameElements = document.getElementsByName("custom_fields[submitted_url]");
    var i;
    for (i = 0; i < nameElements.length; i++) {
        if (nameElements[i].type == "hidden") {
            nameElements[i].value = window.location;
        }
    }
    // Make the "sponsored" info text available via tap action
    var balloon = document.getElementById("ins-benefits-check-balloon");
    var info = document.getElementById('ins-benefits-check-icon');
    balloon.addEventListener("touchend", handlerFunction, false);
    balloon.addEventListener("mouseup", handlerFunction, false);
    info.addEventListener("touchend", handlerFunction, false);
    info.addEventListener("mouseup", handlerFunction, false);
    function handlerFunction(event) {
        var info = document.getElementById('ins-benefits-check-icon');
        toggleClass(info, 'open');
        event.preventDefault();
        return false;
    }
    function toggleClass(element, className) {
        var classes = element.className.match(/\S+/g) || [],
                index = classes.indexOf(className);
        index >= 0 ? classes.splice(index, 1) : classes.push(className);
        element.className = classes.join(' ');
    }
  </script>
