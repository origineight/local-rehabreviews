    .mini-listing-image { width: 108px; }
    .fs-12px { font-size: 12px; }
    .btn-readmore-custom { position: static;display: inline-block;}
    .margin-b-5p { margin-bottom: 5px; }
    .margin-r-0p { margin-right: 0; }
    .mini-listing .btn-readmore {  position: static;display: inline-block;}
  </style>
  <% if !amp_renderable? && params[:controller]=='listings' && params[:action]=='show' %>
    <%#= debug params %>
    <link rel="amphtml" href="<%= "#{listing_url(params[:id])}.amp" %>" />
  <% end %>
