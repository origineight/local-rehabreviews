</head>
<body id="<%= "#{controller_name}_#{action_name}" %>" class="<%= "#{controller_name}" %> <%= 'padding-top-182p' if mobile_device? %>">
  <%= content_for :mobile_popup %>
  <% if mobile_device? %>
    <%= render 'application/fixed_nav_for_mobile' %>
  <% end %>
  <%= render 'nav' %>
  <%= render 'header' %>
  <a id="mc-signup" href="#"></a>

  <main id="main" role="main">
    <div class="container content-container">
      <div id="content">
        <%= render 'breadcrumbs' %>
        <div id="flash-wrapper"></div>
        <script type="text/javascript">
          Flash.transferFromCookies();
          for(var i in Flash.data) {
            jQuery("<div/>",{
              id: 'flash-message-'+i,
              class: 'alert alert-'+i,
            }).appendTo('#flash-wrapper');
            Flash.writeDataTo(i, $('#flash-message-'+i));
          };
        </script>
        <%= yield %>
        <% if Rails.env == "development" %>
          <pre style="margin-top: 20px;"><code id="params"><%= params %></code></pre>
        <% end %>

      </div>

    </div>
  </main>

  <footer id="site-footer">
    <div class="container">
      <div class="footer-left">
        <p class="copyright">&copy; <%= Time.now.year %> Rehab Reviews. All Rights Reserved.&nbsp; <%= link_to 'Terms & Conditions', 'https://rehabreviews.com/terms-and-conditions/' %></p>
        <% if @directories.present? %>
        <ul class="nav footer-nav">
          <% @directories.each do |dir| %>
            <li role="presentation"><%= link_to dir.name, search_directory_path(dir), role: 'menuitem' %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <%= render 'footerlogin' %>
