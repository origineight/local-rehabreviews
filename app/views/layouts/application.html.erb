  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= content_for :stylesheets %>
  <%= content_for :google_maps_js %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= render 'dfptags' %>
