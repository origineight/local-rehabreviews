<div class="footer-login">
  <% if member_signed_in? %>
    <%= link_to 'Dashboard', dashboard_path, class: 'btn btn-login' %>
    <%= link_to "Logout", destroy_member_session_path, method: :delete, class: 'btn btn-login' %>
