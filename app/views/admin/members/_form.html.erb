<% if @member.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@member.errors.count, "error") %> prohibited
      this member from being saved:</h2>
    <ul>
    <% @member.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [:admin, @member] do |f| %>
  <div class="form-group required">
    <%= f.label :first_name, 'First name', class: 'control-label' %>
    <%= f.text_field :first_name, required: true, class: 'form-control' %>
  </div>
  <div class="form-group required">
    <%= f.label :last_name, 'Last name', class: 'control-label' %>
    <%= f.text_field :last_name, required: true, class: 'form-control' %>
  </div>
  <div class="form-group required">
    <%= f.label :email, class: 'control-label' %>
    <%= f.text_field :email, required: true, class: 'form-control' %>
  </div>
  <div class="form-group required">
    <%= f.label :password, class: 'control-label' %>
    <%= f.password_field :password, required: true, class: 'form-control' %>
  </div>
  <div class="form-group required">
    <%= f.label :password_confirmation, class: 'control-label' %>
    <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <label class="col-sm-12 checkbox-inline">
       <%= f.check_box :is_administrator %><strong>Check this box to make user an admin</strong>
    </label>
  </div>
  <p class="required-message strong text-right"><span class="red">*</span> Denotes a required field.</p>
  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <a class="btn btn-orange" href="javascript:history.back()">Cancel</a>
  </div>
<% end %>
